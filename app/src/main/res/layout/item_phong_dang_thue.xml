<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="320dp">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="P101"
        android:textSize="37dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.016"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:height="35dp"
        android:drawableLeft="@drawable/stopwatch"
        android:drawablePadding="10dp"
        android:gravity="center"
        android:text="@string/tvDate"
        android:textSize="35dp"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="300dp" />

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="273dp"
        android:layout_height="47dp"
        android:layout_marginTop="20dp"
        android:height="35dp"
        android:drawableLeft="@drawable/table"
        android:gravity="center"
        android:text="0 VND"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@+id/tvDate"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="6dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="273dp"
        android:layout_height="47dp"
        android:layout_marginTop="22dp"
        android:height="35dp"
        android:drawableLeft="@drawable/credit_card"
        android:drawablePadding="10dp"
        android:textSize="25dp"
        android:gravity="center"
        android:text="500.000 VND"
        app:layout_constraintTop_toBottomOf="@+id/tvTime"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="6dp" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="273dp"
        android:layout_height="47dp"
        android:layout_marginTop="20dp"
        android:height="35dp"
        android:textSize="25dp"
        android:drawableLeft="@drawable/resting_icon"
        android:drawablePadding="10dp"
        android:gravity="center"
        android:text="2.000.000 VND"
        app:layout_constraintTop_toBottomOf="@+id/tvDate"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="511dp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="273dp"
        android:layout_height="47dp"
        android:layout_marginTop="88dp"
        android:height="35dp"
        android:drawableLeft="@drawable/money_icon"
        android:drawablePadding="10dp"
        android:gravity="center"
        android:text="1.500.000 VND"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@+id/tvDate"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="511dp" />

    <TextView
        android:id="@+id/tvNote"
        android:layout_width="273dp"
        android:layout_height="47dp"
        android:layout_marginTop="22dp"
        android:height="35dp"
        android:drawableLeft="@drawable/writing"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:text="@string/tvNote"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="6dp" />

</androidx.constraintlayout.widget.ConstraintLayout>