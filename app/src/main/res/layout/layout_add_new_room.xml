<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:paddingHorizontal="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_cancel_createRoom"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_close"
            android:text="@string/cancel"
            android:textColor="@color/white"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/tvTitleDialog"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Create New Room"
            android:textColor="@color/black"
            android:textSize="40dp" />

        <TextView
            android:id="@+id/btn_confirm_createRoom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Done"
            android:textColor="@color/teal_700"
            android:textSize="35dp" />

    </LinearLayout>
    <Spinner
        android:id="@+id/spn_type_room"
        android:layout_width="600dp"
        android:layout_height="70dp"
        android:background="@drawable/custom_border"
        android:gravity="center_vertical"
        android:paddingHorizontal="20dp"
        android:layout_marginVertical="20dp"
        android:layout_gravity="center_horizontal"
        android:textSize="35dp"/>
    <EditText
        android:id="@+id/edt_id_room"
        android:layout_width="600dp"
        android:layout_height="70dp"
        android:background="@drawable/custom_border"
        android:gravity="center_vertical"
        android:paddingHorizontal="20dp"
        android:hint="Id Room"
        android:inputType="number"
        android:layout_marginVertical="20dp"
        android:layout_gravity="center_horizontal"
        android:textSize="35dp"/>

    <EditText
        android:id="@+id/edt_name_room"
        android:layout_width="600dp"
        android:layout_height="70dp"
        android:background="@drawable/custom_border"
        android:gravity="center_vertical"
        android:paddingHorizontal="20dp"
        android:hint="Name Room"
        android:layout_marginVertical="20dp"
        android:layout_gravity="center_horizontal"
        android:textSize="35dp"/>

    <EditText
        android:id="@+id/edt_max_person_room"
        android:layout_width="600dp"
        android:layout_height="70dp"
        android:background="@drawable/custom_border"
        android:gravity="center_vertical"
        android:paddingHorizontal="20dp"
        android:hint="Maximum Person"
        android:inputType="number"
        android:layout_marginVertical="20dp"
        android:layout_gravity="center_horizontal"
        android:textSize="35dp"/>
    <EditText
        android:id="@+id/edt_price_room"
        android:layout_width="600dp"
        android:layout_height="70dp"
        android:background="@drawable/custom_border"
        android:gravity="center_vertical"
        android:paddingHorizontal="20dp"
        android:hint="Price Room"
        android:inputType="numberDecimal"
        android:layout_marginVertical="20dp"
        android:layout_gravity="center_horizontal"
        android:textSize="35dp"/>

</LinearLayout>